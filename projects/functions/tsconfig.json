{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "baseUrl": "./",
  "paths": {
    "my-lib": [
      "dist/my-lib" // the relative path to our generated library
    ]
  }
}
